<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    android:fillViewport="true"
    android:id="@id/navigation_drawer"
    android:layout_height="match_parent"
    android:layout_width="@dimen/navigation_drawer_width"
    style="@style/navigation_drawer">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_height="@dimen/navigation_drawer_banner_height"
            android:layout_marginBottom="@dimen/root_padding_half"
            android:layout_width="match_parent">
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/navigation_drawer_banner"
                tools:ignore="ContentDescription" />
            <View
                android:background="@color/overlay_dark"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />
        </FrameLayout>
        <TextView
            android:id="@+id/navigation_drawer_rankings"
            android:text="@string/rankings"
            style="@style/navigation_drawer_item.rankings" />
        <TextView
            android:id="@+id/navigation_drawer_tournaments"
            android:text="@string/tournaments"
            style="@style/navigation_drawer_item.tournaments" />
        <View
            android:background="@drawable/divider"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/root_padding_half"
            android:layout_marginTop="@dimen/root_padding_half"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/navigation_drawer_settings"
            android:text="@string/settings"
            style="@style/navigation_drawer_item" />
        <TextView
            android:id="@+id/navigation_drawer_about"
            android:text="@string/about"
            style="@style/navigation_drawer_item" />
    </LinearLayout>
</ScrollView>
