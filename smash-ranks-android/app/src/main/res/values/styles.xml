<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="drawer_layout" parent="root.no_padding">
        <item name="android:id">@id/drawer_layout</item>
    </style>

    <style name="error">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/root_padding</item>
        <item name="android:layout_marginRight">@dimen/root_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lineSpacingExtra">@dimen/root_padding_fourth</item>
        <item name="android:text">@string/error</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="list_item_root">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingLeft">@dimen/root_padding_fourth</item>
        <item name="android:paddingRight">@dimen/root_padding_fourth</item>
    </style>

    <style name="list_item_root.separator">
        <item name="android:minHeight">@dimen/list_item_separator_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="navigation_drawer_item">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/root_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/root_padding</item>
        <item name="android:paddingRight">@dimen/root_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="navigation_drawer">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="navigation_drawer_item.rankings">
        <item name="android:drawableLeft">@drawable/ic_people</item>
    </style>

    <style name="navigation_drawer_item.tournaments">
        <item name="android:drawableLeft">@drawable/ic_star</item>
    </style>

    <style name="root">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/root_padding</item>
    </style>

    <style name="root.no_padding">
        <item name="android:padding">0dp</item>
    </style>

    <style name="settings_container">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/root_padding</item>
    </style>

    <style name="settings_subtitle" parent="settings_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="settings_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="settings_title" parent="settings_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
