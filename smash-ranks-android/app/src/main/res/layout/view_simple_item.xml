<?xml version="1.0" encoding="utf-8"?>
<com.garpr.android.views.SimpleItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray"
    tools:ignore="Overdraw"
    style="@style/list_item_root.no_padding">
    <TextView
        android:background="?attr/selectableItemBackground"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/view_simple_item_text"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="@dimen/list_item_height"
        android:paddingBottom="@dimen/root_padding_fourth"
        android:paddingLeft="@dimen/root_padding"
        android:paddingRight="@dimen/root_padding"
        android:paddingTop="@dimen/root_padding_fourth"
        android:maxLines="3"
        android:textSize="20sp"
        tools:text="Hello, World!" />
</com.garpr.android.views.SimpleItemView>
