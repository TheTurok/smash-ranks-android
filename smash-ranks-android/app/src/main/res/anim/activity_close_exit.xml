<?xml version="1.0" encoding="utf-8"?>
<!--
    When closing the current activity, this is the animation that is run on the current activity
    (which is exiting the screen).
-->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:duration="@android:integer/config_shortAnimTime"
        android:fromAlpha="1.00"
        android:toAlpha="0.75" />
    <scale
        android:duration="@android:integer/config_shortAnimTime"
        android:fromXScale="1.00"
        android:toXScale="0.75" />
</set>
