<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:layout_height="@dimen/list_item_height"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/root_padding_fourth"
    android:paddingRight="@dimen/root_padding_half"
    android:orientation="horizontal">
    <TextView
        android:gravity="center_vertical|right"
        android:id="@+id/model_player_rank"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/root_padding"
        android:layout_width="48dp"
        android:textSize="25sp"
        tools:text="1" />
    <TextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/model_player_name"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="25sp"
        tools:text="Shroomed" />
    <TextView
        android:id="@+id/model_player_rating"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/root_padding"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:textSize="25sp"
        tools:text="30.102" />
</LinearLayout>
