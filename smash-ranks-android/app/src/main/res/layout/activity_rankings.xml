<?xml version="1.0" encoding="utf-8"?>
<com.garpr.android.misc.FlexibleSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_rankings_refresh"
    style="@style/root.no_padding">
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ListView
            android:id="@+id/activity_rankings_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone" />
        <TextView
            android:id="@+id/activity_rankings_error"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/network_error"
            android:textSize="20sp"
            android:visibility="gone" />
    </FrameLayout>
</com.garpr.android.misc.FlexibleSwipeRefreshLayout>
