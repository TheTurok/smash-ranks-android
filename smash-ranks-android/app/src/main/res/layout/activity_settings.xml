<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/drawer_layout">
    <LinearLayout
        android:orientation="vertical"
        style="@style/root.no_padding">
        <include
            layout="@layout/toolbar" />
        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <LinearLayout
                android:divider="@drawable/divider_dark"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:showDividers="middle">
                <LinearLayout
                    android:id="@+id/activity_settings_region"
                    style="@style/settings_container">
                    <TextView
                        android:text="@string/change_region"
                        style="@style/settings_title" />
                    <TextView
                        android:id="@+id/activity_settings_region_name"
                        tools:text="@string/norcal"
                        style="@style/settings_subtitle" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/activity_settings_sync"
                    style="@style/settings_container">
                    <TextView
                        android:text="@string/change_sync_settings"
                        style="@style/settings_title" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/activity_settings_player"
                    android:visibility="gone"
                    tools:visibility="visible"
                    style="@style/settings_container.disabled">
                    <TextView
                        android:text="@string/selected_tag"
                        style="@style/settings_title" />
                    <TextView
                        android:id="@+id/activity_settings_player_name"
                        tools:text="Charles"
                        style="@style/settings_subtitle" />
                </LinearLayout>
                <LinearLayout
                    style="@style/settings_container.disabled">
                    <TextView
                        android:id="@+id/activity_settings"
                        android:text="@string/version"
                        style="@style/settings_title" />
                    <TextView
                        android:id="@+id/activity_settings_version"
                        tools:text="1.0 (1)"
                        style="@style/settings_subtitle" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include
        layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
