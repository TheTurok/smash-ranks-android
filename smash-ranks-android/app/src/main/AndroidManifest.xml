<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.garpr.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/gar_pr"
        android:name=".App"
        android:theme="@style/app_theme">

        <activity
            android:label="@string/about"
            android:launchMode="singleTop"
            android:name=".activities.AboutActivity"
            android:parentActivityName=".activities.RankingsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.RankingsActivity" />
        </activity>

        <activity
            android:label="@string/gar_pr"
            android:launchMode="singleTop"
            android:name=".activities.OnboardingActivity"
            android:noHistory="true"
            android:theme="@style/app_theme.no_toolbar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/player"
            android:launchMode="singleTop"
            android:name=".activities.PlayerActivity"
            android:parentActivityName=".activities.RankingsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.RankingsActivity" />
        </activity>

        <activity
            android:label="@string/gar_pr"
            android:launchMode="singleTop"
            android:name=".activities.RankingsActivity" />

        <activity
            android:label="@string/regions"
            android:launchMode="singleTop"
            android:name=".activities.RegionsActivity"
            android:parentActivityName=".activities.SettingsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SettingsActivity" />
        </activity>

        <activity
            android:label="@string/settings"
            android:launchMode="singleTop"
            android:name=".activities.SettingsActivity"
            android:parentActivityName=".activities.RankingsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.RankingsActivity" />
        </activity>

        <activity
            android:label="@string/tournaments"
            android:launchMode="singleTop"
            android:name=".activities.TournamentsActivity"
            android:parentActivityName=".activities.RankingsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.RankingsActivity" />
        </activity>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="bd8750ba792168bfa4d0bc52e19ad83a6fad27c3" />

    </application>

</manifest>
