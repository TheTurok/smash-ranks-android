<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="garpr_text">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="gravity_end">
        <item name="android:gravity">end</item>
    </style>

    <style name="header_text">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="layout_gravity_bottom_end">
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="navigation_drawer">
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="navigation_drawer_item.about">
        <item name="android:drawableStart">@drawable/ic_about</item>
    </style>

    <style name="navigation_drawer_item.rankings">
        <item name="android:drawableStart">@drawable/ic_people</item>
    </style>

    <style name="navigation_drawer_item.settings">
        <item name="android:drawableStart">@drawable/ic_settings</item>
    </style>

    <style name="navigation_drawer_item.tournaments">
        <item name="android:drawableStart">@drawable/ic_star</item>
    </style>

    <style name="results_bar_loses" parent="results_bar_base">
        <item name="android:background">@color/transparent_lose_pink</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <style name="results_bar_wins" parent="results_bar_base">
        <item name="android:background">@color/transparent_win_green</item>
        <item name="android:layout_gravity">center_vertical|start</item>
    </style>

</resources>
