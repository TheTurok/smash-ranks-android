<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="drawer_layout" parent="root.no_padding">
        <item name="android:id">@id/drawer_layout</item>
    </style>

    <style name="error_container">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/root_padding</item>
        <item name="android:paddingRight">@dimen/root_padding</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="error_line">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="error_line1" parent="error_line">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:text">@string/error_</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="error_line2" parent="error_line">
        <item name="android:text">@string/swipe_to_refresh_and_try_again</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="fontFamily_medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gravity_end">
        <item name="android:gravity">right</item>
    </style>

    <style name="list">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="list_item_root">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingBottom">@dimen/root_padding_fourth</item>
        <item name="android:paddingLeft">@dimen/root_padding</item>
        <item name="android:paddingRight">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_fourth</item>
    </style>

    <style name="list_item_root.no_padding">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="list_item_root.text">
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="navigation_drawer_item">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/root_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/root_padding</item>
        <item name="android:paddingRight">@dimen/root_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="navigation_drawer">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="navigation_drawer_item.about">
        <item name="android:drawableLeft">@drawable/ic_about_default</item>
    </style>

    <style name="navigation_drawer_item.rankings">
        <item name="android:drawableLeft">@drawable/ic_people_default</item>
    </style>

    <style name="navigation_drawer_item.settings">
        <item name="android:drawableLeft">@drawable/ic_settings_default</item>
    </style>

    <style name="navigation_drawer_item.tournaments">
        <item name="android:drawableLeft">@drawable/ic_star_default</item>
    </style>

    <style name="root">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/root_padding</item>
    </style>

    <style name="root.no_padding">
        <item name="android:padding">0dp</item>
    </style>

    <style name="separator_item_root">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/root_padding_half</item>
        <item name="android:paddingLeft">@dimen/root_padding</item>
        <item name="android:paddingRight">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding</item>
    </style>

    <style name="settings_container">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/root_padding</item>
    </style>

    <style name="settings_container.disabled">
        <item name="android:alpha">0.6</item>
    </style>

    <style name="settings_section">
        <item name="android:background">@color/gray</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/root_padding_half</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/root_padding</item>
    </style>

    <style name="settings_separator_base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/root_padding_half</item>
        <item name="android:layout_marginLeft">@dimen/root_padding</item>
        <item name="android:layout_marginRight">@dimen/root_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/indigo_bright</item>
    </style>

    <style name="settings_separator" parent="settings_separator_base">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_subtitle" parent="settings_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="settings_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="settings_title" parent="settings_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="singleline">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="toolbar">
        <item name="android:background">@color/gray_dark</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation</item>
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
