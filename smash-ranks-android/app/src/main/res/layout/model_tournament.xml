<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="Overdraw"
    style="@style/list_item_root">
    <TextView
        android:id="@+id/model_tournament_date"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/root_padding_half"
        android:layout_marginRight="@dimen/root_padding_half"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        tools:text="28" />
    <TextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/model_tournament_name"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:textSize="18sp"
        tools:text="The Big House 4" />
</LinearLayout>
