<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/root.no_padding">
    <TextView
        android:gravity="center"
        android:id="@+id/activity_onboarding_title"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/root_padding"
        android:layout_width="wrap_content"
        android:padding="@dimen/root_padding"
        android:text="@string/gar_pr"
        android:textSize="32sp" />
    <ImageView
        android:id="@+id/activity_onboarding_orb"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/root_padding_double"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/smash_orb"
        tools:ignore="ContentDescription" />
    <com.garpr.android.misc.NonSwipeableViewPager
        android:background="@color/bg_material_dark"
        android:id="@+id/activity_onboarding_pager"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent" />
</LinearLayout>
