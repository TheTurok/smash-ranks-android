<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/root.no_padding">
    <com.garpr.android.views.FlexibleSwipeRefreshLayout
        android:id="@+id/fragment_base_list_refresh"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <FrameLayout
            android:id="@+id/fragment_regions_list_frame"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_base_list_list"
                style="@style/list.no_padding" />
            <LinearLayout
                android:id="@+id/fragment_base_list_error"
                tools:visibility="visible"
                style="@style/error_container">
                <TextView
                    android:id="@+id/fragment_base_list_error_line"
                    style="@style/error_line1" />
                <TextView
                    style="@style/error_line2" />
            </LinearLayout>
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fragment_regions_save"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/root_padding"
                android:layout_marginLeft="@dimen/root_padding"
                android:layout_marginRight="@dimen/root_padding"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_save_normal"
                app:fab_colorNormal="@color/indigo_bright"
                app:fab_colorPressed="@color/indigo"
                app:fab_colorRipple="@color/indigo_dark"
                style="@style/layout_gravity_bottom_end" />
        </FrameLayout>
    </com.garpr.android.views.FlexibleSwipeRefreshLayout>
    <android.support.v7.widget.Toolbar
        android:visibility="gone"
        app:theme="@style/toolbar_theme"
        tools:visibility="visible"
        style="@style/toolbar" />
</LinearLayout>
